@model Change.Models.Models.Request

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Not Approved Request Details</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control" readonly />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Priority"></label>
            <input asp-for="Priority" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Status"></label>
            <input asp-for="Status" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="AdminApprovalDate">Admin Approval Date</label>
            <input asp-for="AdminApprovalDate" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="AdminReason">Admin Approval Reason</label>
            <textarea asp-for="AdminReason" class="form-control" readonly></textarea>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <a asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
