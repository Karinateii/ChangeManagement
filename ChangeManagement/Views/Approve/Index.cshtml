@model List<Change.Models.Models.Request>

<div class="container-fluid px-4">
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <h2 class="text-success mb-0 fw-bold">
                <i class="bi bi-check-circle"></i> Approved Change Requests
            </h2>
            <p class="text-muted mb-0">View all approved requests with approval details</p>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <table id="tblData" class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-card-heading text-primary"></i> Title</th>
                            <th><i class="bi bi-circle-fill text-success"></i> Status</th>
                            <th><i class="bi bi-calendar-event text-info"></i> Submission Date</th>
                            <th><i class="bi bi-calendar-check text-success"></i> Approval Date</th>
                            <th class="text-center"><i class="bi bi-gear text-secondary"></i> Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm" role="alert">
            <i class="bi bi-info-circle"></i> No approved change requests found.
        </div>
    }
</div>

@section Scripts{
    <script src="~/js/approve.js"></script>
}
