@model List<Change.Models.Models.Request>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Approved Change Requests
            </h2>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Title of Change
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Date of Submission
                    </th>
                    <th>
                        Admin Approval Date
                    </th>
                    <th></th>
                </tr>
            </thead>
        </table>
    }
    else
    {
        <p>No approved change requests found.</p>
    }
</div>

@section Scripts{
    <script src="~/js/approve.js"></script>
}
