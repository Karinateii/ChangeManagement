@model Change.Models.Models.Request

@{
    ViewData["Title"] = "Request Details";
    var statusClass = Model.Status switch {
        "Approved" => "success",
        "Not Approved" => "danger",
        _ => "warning"
    };
    var statusIcon = Model.Status switch {
        "Approved" => "check-circle-fill",
        "Not Approved" => "x-circle-fill",
        _ => "clock-fill"
    };
}

<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-9">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-file-earmark-text-fill me-2"></i>Request Details
                    </h4>
                    <span class="badge bg-@statusClass fs-6">
                        <i class="bi bi-@statusIcon me-1"></i>@Model.Status
                    </span>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Edit" asp-controller="Request">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-12 col-md-8">
                                <div class="mb-4">
                                    <label asp-for="Title" class="form-label fw-semibold">
                                        <i class="bi bi-card-heading text-primary me-1"></i>Title
                                    </label>
                                    <input asp-for="Title" class="form-control form-control-lg" readonly />
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="mb-4">
                                    <label asp-for="Priority" class="form-label fw-semibold">
                                        <i class="bi bi-exclamation-triangle text-warning me-1"></i>Priority
                                    </label>
                                    <input asp-for="Priority" class="form-control form-control-lg" readonly />
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="bi bi-text-paragraph text-primary me-1"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="5" readonly></textarea>
                        </div>
                        
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="mb-4">
                                    <label asp-for="SubmittedBy" class="form-label fw-semibold">
                                        <i class="bi bi-person-fill text-info me-1"></i>Submitted By
                                    </label>
                                    <input asp-for="SubmittedBy" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Date" class="form-label fw-semibold">
                                        <i class="bi bi-calendar-event text-info me-1"></i>Submission Date
                                    </label>
                                    <input asp-for="Date" type="text" class="form-control" readonly />
                                </div>
                            </div>
                        </div>

                        @if (User.IsInRole("Admin"))
                        {
                            <hr class="my-4">
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-shield-check me-2"></i>Admin Actions
                            </h5>
                            
                            <div class="mb-4">
                                <label asp-for="Status" class="form-label fw-semibold">Status</label>
                                <select asp-for="Status" class="form-select form-select-lg" required>
                                    <option value="Pending">🟡 Pending</option>
                                    <option value="Approved">🟢 Approved</option>
                                    <option value="Not Approved">🔴 Not Approved</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="AdminReason" class="form-label fw-semibold">Admin Reason</label>
                                <textarea asp-for="AdminReason" class="form-control" rows="4" maxlength="1000" placeholder="Provide a reason for your decision"></textarea>
                                <span asp-validation-for="AdminReason" class="text-danger"></span>
                                <small class="text-muted">Maximum 1000 characters</small>
                            </div>

                            <div class="mb-4">
                                <label asp-for="AdminApprovalDate" class="form-label fw-semibold">Admin Approval Date</label>
                                <input asp-for="AdminApprovalDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="AdminApprovalDate" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            @if (!string.IsNullOrEmpty(Model.AdminReason))
                            {
                                <hr class="my-4">
                                <div class="mb-4">
                                    <label asp-for="AdminReason" class="form-label fw-semibold">
                                        <i class="bi bi-chat-quote text-primary me-1"></i>Admin Feedback
                                    </label>
                                    <div class="alert alert-info" role="alert">
                                        @Model.AdminReason
                                    </div>
                                </div>
                            }
                            
                            @if (Model.AdminApprovalDate.HasValue)
                            {
                                <div class="mb-4">
                                    <label asp-for="AdminApprovalDate" class="form-label fw-semibold">
                                        <i class="bi bi-calendar-check text-success me-1"></i>Decision Date
                                    </label>
                                    <input asp-for="AdminApprovalDate" type="text" class="form-control" readonly />
                                </div>
                            }
                        }

                        <hr class="my-4">
                        
                        <div class="row g-3">
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="col-12 col-sm-6 col-md-4">
                                    <button type="submit" class="btn btn-success btn-lg w-100">
                                        <i class="bi bi-check-circle-fill me-2"></i>Update Status
                                    </button>
                                </div>
                            }
                            <div class="col-12 col-sm-6 col-md-4">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
