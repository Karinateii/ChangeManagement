@model List<Request>

<div class="container-fluid px-4">
    <div class="row pt-4 pb-3 align-items-center">
        <div class="col-md-6 col-12 mb-3 mb-md-0">
            <h2 class="text-primary mb-0 fw-bold">
                <i class="bi bi-clipboard-check"></i> Change Requests
            </h2>
            <p class="text-muted mb-0">Manage and track all change requests</p>
        </div>
        <div class="col-md-6 col-12 text-md-end">
            @if (User.IsInRole("Employee"))
            {
                <a asp-controller="Request" asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-plus-circle"></i> Create New Request
                </a>
            }
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <table id="tblData" class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th><i class="bi bi-card-heading text-primary"></i> Title</th>
                        <th><i class="bi bi-flag text-warning"></i> Priority</th>
                        <th><i class="bi bi-circle-fill text-info"></i> Status</th>
                        <th><i class="bi bi-person text-success"></i> Submitted By</th>
                        <th class="text-center"><i class="bi bi-gear text-secondary"></i> Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/request.js"></script>
}