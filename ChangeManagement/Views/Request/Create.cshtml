@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@model Request

@{
    ViewData["Title"] = "Create Change Request";
}

<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle-fill me-2"></i>Create New Change Request
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Create" asp-controller="Request">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold">
                                <i class="bi bi-card-heading text-primary me-1"></i>Title
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg" maxlength="200" placeholder="Enter a descriptive title" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="bi bi-text-paragraph text-primary me-1"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="6" maxlength="2000" placeholder="Provide detailed information about the change request" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="text-muted">Maximum 2000 characters</small>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Priority" class="form-label fw-semibold">
                                <i class="bi bi-exclamation-triangle text-warning me-1"></i>Priority
                            </label>
                            <select asp-for="Priority" class="form-select form-select-lg" required>
                                <option value="">-- Select Priority Level --</option>
                                <option value="Low">🟢 Low</option>
                                <option value="Medium" selected>🟡 Medium</option>
                                <option value="High">🟠 High</option>
                                <option value="Critical">🔴 Critical</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="SubmittedBy" value="@GetUserName()">

                        @functions {
                            private string GetUserName()
                            {
                                var user = UserManager.FindByNameAsync(User.Identity?.Name ?? string.Empty).Result;
                                return user?.Name ?? "Unknown User";
                            }
                        }

                        <hr class="my-4">
                        
                        <div class="row g-3">
                            <div class="col-12 col-sm-6 col-md-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-check-circle-fill me-2"></i>Create Request
                                </button>
                            </div>
                            <div class="col-12 col-sm-6 col-md-4">
                                <a asp-controller="Request" asp-action="Index" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}