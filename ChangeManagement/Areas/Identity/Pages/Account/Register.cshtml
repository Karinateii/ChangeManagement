@page
@model RegisterModel

<div class="container-fluid px-4 py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-9">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <i class="bi bi-person-plus-fill display-4 mb-3"></i>
                    <h2 class="mb-0 fw-bold">Create Account</h2>
                    <p class="mb-0 small opacity-75">Join the Change Management System</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form id="registerForm" class="row g-3" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="col-12">
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-person-circle me-2"></i>Account Information
                            </h5>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">
                                    <i class="bi bi-envelope me-2"></i>Email Address
                                </label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="John Doe" />
                                <label asp-for="Input.Name">
                                    <i class="bi bi-person me-2"></i>Full Name
                                </label>
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="+1234567890" />
                                <label asp-for="Input.PhoneNumber">
                                    <i class="bi bi-phone me-2"></i>Phone Number
                                </label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="Password" />
                                <label asp-for="Input.Password">
                                    <i class="bi bi-lock me-2"></i>Password
                                </label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                <label asp-for="Input.ConfirmPassword">
                                    <i class="bi bi-lock-fill me-2"></i>Confirm Password
                                </label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-geo-alt-fill me-2"></i>Address Information
                            </h5>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="123 Main St" />
                                <label asp-for="Input.StreetAddress">
                                    <i class="bi bi-house me-2"></i>Street Address
                                </label>
                                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="City" />
                                <label asp-for="Input.City">
                                    <i class="bi bi-building me-2"></i>City
                                </label>
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input asp-for="Input.State" class="form-control" aria-required="true" placeholder="State" />
                                <label asp-for="Input.State">
                                    <i class="bi bi-map me-2"></i>State
                                </label>
                                <span asp-validation-for="Input.State" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="12345" />
                                <label asp-for="Input.PostalCode">
                                    <i class="bi bi-mailbox me-2"></i>Postal Code
                                </label>
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-shield-check me-2"></i>Role Selection
                            </h5>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                    <option disabled selected>--Select Your Role--</option>
                                </select>
                                <label asp-for="Input.Role">
                                    <i class="bi bi-person-badge me-2"></i>Role
                                </label>
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <div class="d-grid">
                                <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>Create Account
                                </button>
                            </div>
                        </div>

                        <div class="col-12 text-center mt-3">
                            <p class="mb-0">
                                Already have an account? 
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-semibold">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Sign In
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
